{
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "pretty": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["./**/*.js", "./**/*.d.ts", "./**/*.mjs"]
}
